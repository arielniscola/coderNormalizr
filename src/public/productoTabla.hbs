<h1>Lista de Productos</h1>
    {{#if productos}}         
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
        </thead>
        <tbody>
            {{#each productos}}
        <tr>
            <td>{{id}}</td>
            <td>{{nombre}}</td>
            <td>{{precio}}</td>
            <td><img src="{{foto}}" alt="{{nombre}}"></td>
        </tr>
        {{/each}}
        </tbody>
    </table>
  {{else}}
    <div>
        <p>No hay productos</p>
    </div>
{{/if}}